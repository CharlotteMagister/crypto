<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="%view.name.0"
            icon="platform:/plugin/org.eclipse.ui/icons/full/eview16/defaultview_misc.png"
            category="org.jcryptool.visual"
            class="org.jcryptool.visual.ecc.ui.ECView"
            id="org.jcryptool.visual.ecc.views.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="$nl$/toc.xml"
            primary="false">
      </toc>
   </extension>
   <extension point="org.eclipse.help.contexts">
      <contexts
            file="$nl$/contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.jcryptool.core.operations.visuals">
      <Visual
            name="%view.name.0"
            viewId="org.jcryptool.visual.ecc.views.view"
            contextHelpId="org.jcryptool.visual.ecc.eccview">
      </Visual>
   </extension>

<extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.visual.ecc.handlers.RestartHandler"
            commandId="org.jcryptool.visual.ecc.restartCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.jcryptool.visual.ecc.restartCommand"
            name="%restart.command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.jcryptool.visual.ecc.views.view">
         <command
               commandId="org.jcryptool.visual.ecc.restartCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/new_wiz.png"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.jcryptool.visual.ecc.views.view">
         <command
               commandId="org.jcryptool.visual.ecc.restartCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/new_wiz.png"
               style="push">
         </command>
      </menuContribution>
   </extension>
</plugin>
